<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">

    <!-- Student Name Input -->
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:hint="Enter Student Name"
        android:minHeight="48dp" />

    <!-- Grades Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter Grades"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Prelim Grade"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Midterm Grade"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/number3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Final Exam Grade"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <!-- Results Display -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Results"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Studentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name: "
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/SemGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semestral Grade: "
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Equivalent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pt. Equivalent: "
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remarks: "
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/new_entry"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="New Entry"
            android:layout_marginEnd="80dp" />

        <Button
            android:id="@+id/compute"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Compute" />
    </LinearLayout>

</LinearLayout>
