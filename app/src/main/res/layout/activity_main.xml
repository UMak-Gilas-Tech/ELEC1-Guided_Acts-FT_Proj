                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 17" />


            <Button
                android:id="@+id/startButton18"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 18" />

            <Button
                android:id="@+id/startButton19"
