<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    tools:context=".MainActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guided Exercises"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView for making content scrollable -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        tools:layout_editor_absoluteX="16dp">

        <!-- LinearLayout for Buttons (Inside ScrollView) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <!-- Buttons for each Guided Exercise -->
            <Button
                android:id="@+id/startButton1"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 1" />

            <Button
                android:id="@+id/startButton2"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 2" />

            <Button
                android:id="@+id/startButton3"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 3" />

            <Button
                android:id="@+id/startButton4"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 4" />

            <Button
                android:id="@+id/startButton5"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 5" />

            <Button
                android:id="@+id/startButton6"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 6" />

            <Button
                android:id="@+id/startButton7"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 7" />

            <Button
                android:id="@+id/startButton8"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 8" />

            <Button
                android:id="@+id/startButton9"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 9" />

            <Button
                android:id="@+id/startButton10"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 10" />

            <Button
                android:id="@+id/startButton11"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 11" />

            <Button
                android:id="@+id/startButton12"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 12" />

            <Button
                android:id="@+id/startButton13"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 13" />

            <Button
                android:id="@+id/startButton14"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 14" />

            <Button
                android:id="@+id/startButton15"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 15" />

            <Button
                android:id="@+id/startButton16"
                style="@style/CustomButtonStyle"
                android:drawableLeft="@drawable/ic_exercise_icon"
                android:text="Guided Exercise 16" />

            <Button
                android:id="@+id/startButton17"
