                android:text="@string/button_guided_exercise_17" />


            <Button
                android:id="@+id/startButton18"
                style="@style/CustomButtonStyle"
                android:drawableStart="@drawable/ic_exercise_icon"
                android:text="@string/button_guided_mp1" />

            <Button
                android:id="@+id/startButton19"
                style="@style/CustomButtonStyle"
                android:drawableStart="@drawable/ic_exercise_icon"
                android:text="@string/button_guided_mp2" />

            <Button
                android:id="@+id/startButton20"
                style="@style/CustomButtonStyle"
                android:drawableStart="@drawable/ic_exercise_icon"
                android:text="@string/button_guided_mp3" />

            <Button
                android:id="@+id/startButton21"
                style="@style/CustomButtonStyle"
                android:drawableStart="@drawable/ic_exercise_icon"
                android:text="@string/button_guided_mp4" />

            <Button
                android:id="@+id/startButton22"
                style="@style/CustomButtonStyle"
                android:drawableStart="@drawable/ic_exercise_icon"
                android:text="@string/button_guided_credits" />

            <TextView
                android:id="@+id/dummyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=" "
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
