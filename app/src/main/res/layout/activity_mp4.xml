<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMPLOYEE PAYROLL COMPUTATION"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="36dp" />

    <!-- Employee ID Spinner with Label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Employee ID:" />

        <Spinner
            android:id="@+id/spinner_employee_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Employee Name Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Employee Name:" />

        <TextView
            android:id="@+id/text_employee_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Position Code - Spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Position Code:" />

        <Spinner
            android:id="@+id/spinner_position_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Civil Status Radio Group -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Civil Status:"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/radioGroup_civil_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single"
            android:layout_marginStart="32dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_married"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Married"
            android:layout_marginStart="32dp" />

        <RadioButton
            android:id="@+id/radio_widowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widowed"
            android:layout_marginStart="32dp" />
    </RadioGroup>

    <!-- Input - No. of Days Worked -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="No. of Days Worked:" />


        <Spinner
            android:id="@+id/edit_text_days_worked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Compute and Clear Buttons -->
    <Button
        android:id="@+id/button_compute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginTop="32dp" />
</LinearLayout>
