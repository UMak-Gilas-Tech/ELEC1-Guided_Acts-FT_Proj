<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS and Phone Call"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold" />

    <!-- Phone number input field -->
    <EditText
        android:id="@+id/etPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:layout_marginBottom="16dp" />

    <!-- SMS input field -->
    <EditText
        android:id="@+id/etSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input your message"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"
        android:minHeight="120dp" />

    <!-- Button to send message -->
    <Button
        android:id="@+id/btnSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND MESSAGE HERE"
        android:layout_marginBottom="8dp" />

    <!-- Button to open built-in messaging app -->
    <Button
        android:id="@+id/btnBSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUILT-IN MESSAGE APP"
        android:layout_marginBottom="8dp" />

    <!-- Button to make phone call -->
    <Button
        android:id="@+id/btnPhoneCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALL" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

</LinearLayout>
